
  <div class="album py-20 bg-light">
  <div class="container">
  <div class="row">
      
        <%@cart.each do |item|%>
         <div class= "col -md -4">     
          <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="<%=item.image_url%>" alt="Card image cap">          
              <div class="card-body">
                  <h5 class="card-title"><%=item.title%></h5>
                  <p class="card-text"><%=item.description%></p>
              </div>  
              <div class="card-body">
                <a href="/items/<%=item.id%>" class="card-link"><%=item.price%></a>    
              </div> 
              <a class="btn btn-primary" href="/carts/<%=item.id%>/edit" role="button">Supprimer</a>         
          </div>
         </div>             
        <%end%>

  </div>
  </div>
  </div>