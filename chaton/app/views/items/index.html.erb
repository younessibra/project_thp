    <div class="card album py-20">
      <div class="container mt-3">
      <div class="row">
      
      


        
        <% @items.each do |item| %>  
         <div class= "col -md -4">     
          <div class="card mb-4 box-shadow border border-secondary">
            <img class="card-img-top" src="<%=item.image_url%>" alt="Card image cap">          
              <div class="card-body ">
                  <h5 class="card-title"><%=item.title%></h5>
                  <p class="card-text"><%=item.description%></p>
              </div>  
              <div class="card-body">
