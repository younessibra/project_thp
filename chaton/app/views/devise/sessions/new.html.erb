<div class="connectbackground">
  <%= video_tag( 'chatons.mp4', class: 'sectionvideo', autoplay: true, loop: true, muted: true )%>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="connexion form">
  <div class="field">
    <h1 class="connecttitle">Se connecter</h1>
    <%= f.label :email,"Votre email" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"connectform" %>
    
  </div>

  <div class="field">
    <%= f.label :password, "Votre mot de passe" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"connectform" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Se souvenir de moi" %>

    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Se connecter", class:"connectbutton" %>
  </div>

<% end %>
</div>
</div>

<%= render "devise/shared/links" %>

